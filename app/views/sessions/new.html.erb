<h1>Sign In</h1>

<%= render "layouts/errors" %>

<form action="<%= session_url %>" method="post">
  
  <input 
  type="hidden"
  name="authenticity_token"
  value="form_authenticity_token">
  
  <label for="user_email">Email</label>
  <input 
    type="text" 
    name="user[email]" 
    value="<%= @user.email %>" 
    id="user_email">
    
  <label>Password
  <input 
    type="password" 
    name="user[password]">
  </label>
  
  <input type="submit" value="Sign In">
  
</form>